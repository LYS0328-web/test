    <script type="importmap"> { "imports": { "three": "https://unpkg.com/three@0.160.0/build/three.module.js", "three/addons/": "https://unpkg.com/three@0.160.0/examples/jsm/" } } </script>

<script type="module">
import * as THREE from 'three';
import { OrbitControls } from 'three/addons/controls/OrbitControls.js';

const scene = new THREE.Scene();
scene.background = new THREE.Color(0xfba58c);
scene.fog = new THREE.Fog(0xfba58c, 3000, 15000);

const renderer = new THREE.WebGLRenderer({ antialias: true, logarithmicDepthBuffer: true });
renderer.setSize(window.innerWidth, window.innerHeight);
renderer.shadowMap.enabled = true;
document.body.appendChild(renderer.domElement);

const cameraTPV = new THREE.PerspectiveCamera(60, window.innerWidth/window.innerHeight, 1, 20000);
cameraTPV.position.set(2500, 1800, 2500);
const cameraFPV = new THREE.PerspectiveCamera(80, window.innerWidth/window.innerHeight, 0.1, 10000);
const controls = new OrbitControls(cameraTPV, renderer.domElement);

scene.add(new THREE.AmbientLight(0xffffff, 0.7), new THREE.DirectionalLight(0xffffff, 1.5));

// åœ°é¢
const ground = new THREE.Mesh(new THREE.PlaneGeometry(20000, 20000), new THREE.MeshStandardMaterial({color: 0x34495e}));
ground.rotation.x = -Math.PI/2; ground.receiveShadow = true;
scene.add(ground);

// æ‘©å¤©è¼ª
const ferris = new THREE.Group();
ferris.add(new THREE.Mesh(new THREE.TorusGeometry(400, 8, 16, 100), new THREE.MeshStandardMaterial({color: 0xf1c40f})));
for(let i=0; i<12; i++) {
    const pod = new THREE.Mesh(new THREE.BoxGeometry(60,80,50), new THREE.MeshStandardMaterial({color: 0xe74c3c}));
    pod.position.set(Math.cos(i/12*Math.PI*2)*400, Math.sin(i/12*Math.PI*2)*400, 0);
    ferris.add(pod);
}
ferris.position.set(-2000, 600, -1500);
scene.add(ferris);

// ç‰©ç†å‘é‡
let showArrows = true;
const arrowF = new THREE.ArrowHelper(new THREE.Vector3(1,0,0), new THREE.Vector3(0,0,0), 1, 0xff4757, 40, 20);
const arrowN = new THREE.ArrowHelper(new THREE.Vector3(0,1,0), new THREE.Vector3(0,0,0), 1, 0x38bdf8, 40, 20);
scene.add(arrowF, arrowN);

let curve, frames, trackGroup = new THREE.Group();
const numSamples = 3000;
scene.add(trackGroup);

function buildTracks() {
    while(trackGroup.children.length > 0) trackGroup.remove(trackGroup.children[0]);
    const deg = parseInt(document.getElementById('degSlider').value);
    const rad = deg * (Math.PI / 180);
    const pts = [];
    const launchHeight = 120 + (Math.tan(rad) * 1500);

    for (let i = 0; i <= 100; i++) {
        const t = i / 100, a = t * Math.PI * 2;
        const x = Math.sin(a) * 1800 + Math.sin(a * 2) * 250;
        const z = Math.cos(a) * 1500;
        let y = (i <= 20) ? THREE.MathUtils.lerp(120, launchHeight, i / 20) : Math.max(140, launchHeight * 0.45 + Math.sin(a * 4) * 350);
        pts.push(new THREE.Vector3(x, y, z));
    }
    curve = new THREE.CatmullRomCurve3(pts, true, 'centripetal');
    frames = curve.computeFrenetFrames(numSamples, true);

    const railMat = new THREE.MeshStandardMaterial({ color: 0x333, metalness: 0.9 });
    const woodMat = new THREE.MeshStandardMaterial({ color: 0x5d4037 }); // æ•æœ¨æè³ª

    // é›™è»Œéµé“
    for(let offset of [24, -24]) {
        const rPts = [];
        for(let j=0; j<=numSamples; j++) rPts.push(curve.getPointAt(j/numSamples).add(frames.binormals[j].clone().multiplyScalar(offset)));
        trackGroup.add(new THREE.Mesh(new THREE.TubeGeometry(new THREE.CatmullRomCurve3(rPts, true), numSamples, 6, 8, true), railMat));
    }

    // èåˆï¼šæ•æœ¨èˆ‡å¼·åŒ–æ”¯æŸ±
    for (let i = 0; i < numSamples; i += 15) {
        const p = curve.getPointAt(i/numSamples);
        const idx = i;
        
        // æ”¾ç½®æ•æœ¨ (Ties)
        const tie = new THREE.Mesh(new THREE.BoxGeometry(80, 6, 15), woodMat);
        tie.position.copy(p);
        tie.setRotationFromMatrix(new THREE.Matrix4().makeBasis(frames.binormals[idx], frames.normals[idx], frames.tangents[idx]));
        tie.translateY(-5);
        trackGroup.add(tie);

        // æ”¾ç½®å‚ç›´å¼·åŒ–æ”¯æŸ± (Pillars) - æ¯éš”ä¸€æ®µè·é›¢æ”¾ä¸€æ ¹
        if (i % 90 === 0) {
            const pillar = new THREE.Mesh(new THREE.CylinderGeometry(10, 20, p.y, 6), railMat);
            pillar.position.set(p.x, p.y/2, p.z);
            trackGroup.add(pillar);
        }
    }
}

const train = [];
let progress = 0, vel = 0, isRacing = false, isFPV = false, hasCaptured = false;

function addCar() {
    const car = new THREE.Mesh(new THREE.BoxGeometry(60, 40, 90), new THREE.MeshStandardMaterial({ color: train.length === 0 ? 0xd32f2f : 0x795548 }));
    scene.add(car); train.push(car); updateTrainPosition();
}

function updateTrainPosition() {
    train.forEach((car, i) => {
        const cp = (progress - i * 0.035 + 1) % 1;
        const p = curve.getPointAt(cp);
        const idx = Math.floor(cp * numSamples);
        car.position.copy(p);
        car.setRotationFromMatrix(new THREE.Matrix4().makeBasis(frames.binormals[idx], frames.normals[idx], frames.tangents[idx]));
        car.translateY(25);
        
        if (i === 0) {
            cameraFPV.position.copy(car.position); 
            cameraFPV.setRotationFromMatrix(car.matrix);
            cameraFPV.translateY(20); cameraFPV.translateZ(-25);
            
            arrowF.visible = arrowN.visible = showArrows;
            if (showArrows) {
                arrowF.position.copy(car.position); arrowF.setDirection(frames.tangents[idx]);
                arrowN.position.copy(car.position); arrowN.setDirection(frames.normals[idx]);
                const rad = parseInt(document.getElementById('degSlider').value) * (Math.PI/180);
                arrowF.setLength(Math.sin(rad) * 300 + 50); arrowN.setLength(Math.cos(rad) * 300 + 50);
            }
        }
    });
}

function animate() {
    requestAnimationFrame(animate);
    ferris.rotation.z += 0.003;
    if (isRacing) {
        const p = progress % 1;
        const pos = curve.getPointAt(p);
        if (progress < 0.20) {
            vel = 0.00045;
            document.getElementById('status-text').innerText = "âš™ï¸ çˆ¬å‡ä¸­...";
        } else {
            let g = (2500 - pos.y) * 0.0000035;
            vel = THREE.MathUtils.lerp(vel, 0.001 + Math.max(0, g), 0.05);
            if (!hasCaptured) {
                document.getElementById('initial-speed-lock').innerText = (vel * 380000).toFixed(0);
                hasCaptured = true;
                const b = document.getElementById('bubble'); b.innerText = "ğŸ“¸ åˆé€Ÿåº¦ç´€éŒ„å®Œæˆï¼";
                b.style.display = 'block'; setTimeout(() => b.style.display = 'none', 1500);
            }
        }
        progress += vel;
        if (progress >= 0.995) { isRacing = false; progress = 0; }
        document.getElementById('speed-val').innerText = (vel * 380000).toFixed(0);
        updateTrainPosition();
    }
    controls.update();
    renderer.render(scene, isFPV ? cameraFPV : cameraTPV);
}

document.getElementById('arrowToggleBtn').onclick = function() {
    showArrows = !showArrows;
    this.innerText = `ğŸ‘ï¸ é¡¯ç¤ºå‘é‡ç®­é ­ï¼š${showArrows ? 'ON' : 'OFF'}`;
    this.classList.toggle('off', !showArrows);
    document.getElementById('arrowLegend').style.opacity = showArrows ? '1' : '0.3';
    updateTrainPosition();
};

document.getElementById('startBtn').onclick = () => {
    isRacing = true; progress = 0; vel = 0; hasCaptured = false;
};
document.getElementById('viewBtn').onclick = () => { isFPV = !isFPV; controls.enabled = !isFPV; };
document.getElementById('addCar').onclick = addCar;
document.getElementById('removeCar').onclick = () => { if(train.length > 1) scene.remove(train.pop()); };
document.getElementById('degSlider').oninput = (e) => { 
    buildTracks(); 
    document.getElementById('v-deg').innerText = e.target.value; 
    updateTrainPosition();
};

buildTracks(); for(let i=0; i<6; i++) addCar(); animate();
</script>
</body>
</html>
